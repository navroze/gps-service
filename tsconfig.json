{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build/",
        "sourceMap": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["typings/*", "node_modules"]
}
